<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.3/phpunit.xsd"
        bootstrap="tests/bootstrap.php"
        colors="true"
        convertErrorsToExceptions="false"
        convertWarningsToExceptions="false"
        strict="false"
        verbose="false">

    <testsuites>
        <testsuite name="all-tests">
            <directory>tests/</directory>
        </testsuite>
        <testsuite name="no-perf-tests">
            <directory>tests/</directory>
            <exclude>tests/Spout/Reader/CSVPerfTest.php</exclude>
            <exclude>tests/Spout/Reader/XLSXPerfTest.php</exclude>
            <exclude>tests/Spout/Writer/CSVPerfTest.php</exclude>
            <exclude>tests/Spout/Writer/XLSXPerfTest.php</exclude>
        </testsuite>
        <testsuite name="perf-tests">
            <file>tests/Spout/Reader/CSVPerfTest.php</file>
            <file>tests/Spout/Reader/XLSXPerfTest.php</file>
            <file>tests/Spout/Writer/CSVPerfTest.php</file>
            <file>tests/Spout/Writer/XLSXPerfTest.php</file>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="tests/coverage/"/>
    </logging>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>

</phpunit>
